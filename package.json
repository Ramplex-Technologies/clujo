{
  "name": "clujo",
  "author": "Rami Pellumbi",
  "description": "A lightweight task orchestration library for managing interdependent tasks with automatic parallel execution on a cron schedule.",
  "keywords": [
    "task",
    "scheduler",
    "cron",
    "orchestration",
    "workflow",
    "job",
    "automation",
    "distributed",
    "parallel",
    "async",
    "dependencies",
    "typescript",
    "redis",
    "node",
    "js",
    "topological-sort",
    "single-execution"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ramipellumbi/clujo/tree/main"
  },
  "license": "MIT",
  "private": false,
  "version": "1.0.4",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -r dist/ && tsup ./src",
    "dev": "tsup --watch",
    "lint": "biome check --write ./src"
  },
  "dependencies": {
    "croner": "^9.0.0",
    "ioredis": "^5.4.1",
    "redis-semaphore": "^5.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.7.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
